@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!-- Page Heading -->
<h2 style="color:#2c3e50;">User Registration</h2>

<!-- Registration Form -->
<form asp-action="Register" method="post" style="background-color:#f9f9f9; padding:20px; border-radius:8px;">

    <!-- Username Field -->
    <div class="form-group">
        <label asp-for="UserName" style="color:#34495e;"></label>
        <input asp-for="UserName" class="form-control" style="border-color:#3498db;" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Email Field -->
    <div class="form-group">
        <label asp-for="UserEmail" style="color:#34495e;"></label>
        <input asp-for="UserEmail" class="form-control" style="border-color:#3498db;" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>

    <!-- Password Field -->
    <div class="form-group">
        <label asp-for="Password" style="color:#34495e;"></label>
        <input asp-for="Password" class="form-control" style="border-color:#3498db;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Role Dropdown -->
    <div class="form-group">
        <label asp-for="Role" style="color:#34495e;"></label>
        <select asp-for="Role" class="form-control" style="border-color:#3498db;">
            <option value="">Select Role</option>
            <option value="Admin">Admin</option>
            <option value="Donor">Donor</option>
            <option value="Volunteer">Volunteer</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary" style="background-color:#3498db;">Register</button>
</form>


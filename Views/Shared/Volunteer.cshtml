@model GiftOfTheGiversHub.Models.VolunteerModel

@{
    ViewData["Title"] = "Register Volunteer";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Register New Volunteer</h2>

    <form asp-action="Create" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label asp-for="VolunteerName" class="form-label">Name</label>
            <input asp-for="VolunteerName" class="form-control" />
            <span asp-validation-for="VolunteerName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VolunteerEmail" class="form-label">Email</label>
            <input asp-for="VolunteerEmail" class="form-control" />
            <span asp-validation-for="VolunteerEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Skills" class="form-label">Skills</label>
            <input asp-for="Skills" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Availability" class="form-label">Availability</label>
            <input asp-for="Availability" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Register Volunteer</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



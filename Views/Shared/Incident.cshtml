@model Incident

<h2>Report Incident</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="Severity"></label>
        <select asp-for="Severity">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
            <option>Critical</option>
        </select>
        <span asp-validation-for="Severity"></span>
    </div>

    <div>
        <label asp-for="ReportedBy"></label>
        <input asp-for="ReportedBy" />
        <span asp-validation-for="ReportedBy"></span>
    </div>

    <div>
        <label asp-for="ProjectId">Related Project</label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects"></select>
        <span asp-validation-for="ProjectId"></span>
    </div>

    <button type="submit">Submit Incident</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model GiftOfTheGiversHub.Models.IncidentPageViewModel

@{
    ViewData["Title"] = "Report Incident";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center" style="color: #dc3545;">Report New Incident</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Create" asp-controller="Incident" method="post" class="w-50 mx-auto">
        @Html.AntiForgeryToken()<!--prevents errors-->
        <!--report name-->
        <div class="mb-3">
            <label asp-for="NewIncident.ReporterName" class="form-label">Name</label>
            <input asp-for="NewIncident.ReporterName" class="form-control" />
            <span asp-validation-for="NewIncident.ReporterName" class="text-danger"></span>

        </div>

        <!--reporter  email-->
        <div class="mb-3">
            <label asp-for="NewIncident.ReporterEmail" class="form-label">Email</label>
            <input asp-for="NewIncident.ReporterEmail" class="form-control" />
            <span asp-validation-for="NewIncident.ReporterEmail" class="text-danger"></span>
        </div>

        <!--incident location-->
        <div class="mb-3">
            <label asp-for="NewIncident.Location" class="form-label">Location</label>
            <input asp-for="NewIncident.Location" class="form-control" />
            <span asp-validation-for="NewIncident.Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewIncident.IncidentType" class="form-label">Incident Type</label>
            <select asp-for="NewIncident.IncidentType" class="form-select">
                <option value="">-- Select a Disaster Type --</option>
                <option>Flood</option>
                <option>Drought</option>
                <option>Earthquake</option>
                <option>Fire</option>
                <option>Famine</option>
                <option>Conflict Zone</option>
                <option>Refugee Crisis</option>
                <option>Medical Emergency</option>
                <option>COVID-19 Response</option>
                <option>Cholera Outbreak</option>
                <option>Search and Rescue</option>
            </select>
            <span asp-validation-for="NewIncident.IncidentType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewIncident.Description" class="form-label">Description</label>
            <textarea asp-for="NewIncident.Description" class="form-control"></textarea>
            <span asp-validation-for="NewIncident.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewIncident.UrgencyLevel" class="form-label">Urgency Level</label>
            <select asp-for="NewIncident.UrgencyLevel" class="form-select">
                <option value="">-- Select Urgency --</option>
                <option>Low</option>
                <option>Medium</option>
                <option>High</option>
                <option>Critical</option>
                <span asp-validation-for="NewIncident.UrgencyLevel" class="text-danger"></span>
            </select>
        </div>
        
        <div class="mb-3">
            <label asp-for="NewIncident.DateReported" class="form-label">Date Reported</label>
            <input asp-for="NewIncident.DateReported" class="form-control"  />
        </div>

        <button type="submit" class="btn btn-danger">Submit Incident</button>
    </form>
</div>

<div class="container mt-5">
    <h3 class="mb-3 text-center" style="color: #28a745;">Reported Incidents</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Reporter</th>
                <th>Email</th>
                <th>Type</th>
                <th>Location</th>
                <th>Urgency</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incident in Model.IncidentList)
            {
                <tr>
                    <td>@incident.ReporterName</td>
                    <td>@incident.ReporterEmail</td>
                    <td>@incident.IncidentType</td>
                    <td>@incident.Location</td>
                    <td>@incident.UrgencyLevel</td>
                    <td>@incident.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            alert("@TempData["SuccessMessage"]");
        </script>
    }
}


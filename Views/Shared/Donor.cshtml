@model GiftOfTheGiversHub.Models.DonorPageViewModel

@{
    ViewData["Title"] = "Add Donator";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #007BFF;">Add New Donator</h2>

    <form asp-action="Create" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label asp-for="NewDonator.DonatorName" class="form-label">Name</label>
            <input asp-for="NewDonator.DonatorName" class="form-control" />
            <span asp-validation-for="NewDonator.DonatorName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewDonator.DonatorEmail" class="form-label">Email</label>
            <input asp-for="NewDonator.DonatorEmail" class="form-control" />
            <span asp-validation-for="NewDonator.DonatorEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewDonator.DonationType" class="form-label">Donation Type</label>
            <input asp-for="NewDonator.DonationType" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NewDonator.Notes" class="form-label">Notes</label>
            <textarea asp-for="NewDonator.Notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add Donator</button>
        <button type="button" onclick="location.href='@Url.Action("MyContributions", "Donor")'"> Contributions</button>

    </form>
</div>

<div class="container mt-5">
    <h3 class="mb-3 text-center" style="color: #28a745;">Existing Donations</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Donation Type</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model.DonatorList)
            {
                <tr>
                    <td>@donor.DonatorName</td>
                    <td>@donor.DonatorEmail</td>
                    <td>@donor.DonationType</td>
                    <td>@donor.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button type="button" onclick="location.href='@Url.Action("LandingPage", "Home")'">Log Out</button>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@{
    //ViewData["Title"] = "Welcome";
    Layout = null;
 }



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gift of the Givers Hub</title>
    <style>
        body {
            background-color: #222;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background-color: #111;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 168, 89, 0.3);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #00a859;
            margin-bottom: 1rem;
        }

        p {
            color: #ccc;
            margin-bottom: 2rem;
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .button-group a {
            display: block;
            text-decoration: none;
            background-color: #00a859;
            color: #fff;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .button-group a:hover {
            background-color: #00cc66;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Gift of the Givers Hub</h1>
        <p>Empowering communities through compassion and action.</p>

        <div class="button-group">
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Sign Up</a>
            <a asp-controller="Incident" asp-action="ReportIncident">Report Incident</a>
        </div>
    </div>
</body>
</html>
@section Scripts {
    <!-- No scripts needed for this page -->
}


@model SupplyViewModel

<h2>Deliver Supply</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="ProjectId">Project</label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects"></select>
        <span asp-validation-for="ProjectId"></span>
    </div>

    <div>
        <label asp-for="DonationId">Donation</label>
        <select asp-for="DonationId" asp-items="ViewBag.Donations"></select>
        <span asp-validation-for="DonationId"></span>
    </div>

    <div>
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" />
        <span asp-validation-for="ItemName"></span>
    </div>

    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" />
        <span asp-validation-for="Quantity"></span>
    </div>

    <div>
        <label asp-for="SupplyStatus"></label>
        <select asp-for="SupplyStatus">
            <option>Pending</option>
            <option>Delivered</option>
            <option>Delayed</option>
        </select>
        <span asp-validation-for="SupplyStatus"></span>
    </div>

    <div>
        <label asp-for="DeliveryDate"></label>
        <input asp-for="DeliveryDate" type="date" />
        <span asp-validation-for="DeliveryDate"></span>
    </div>

    <button type="submit">Submit Supply</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model GiftOfTheGiversHub.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>

    <!-- Toggle Buttons -->
    <div class="mb-4 text-center">
        <button class="btn btn-outline-primary" onclick="toggleSection('adminsTable')">Show/Hide Admins</button>
        <button class="btn btn-outline-secondary" onclick="toggleSection('staffTable')">Show/Hide Staff</button>
        <button class="btn btn-outline-success" onclick="toggleSection('volunteersTable')">Show/Hide Volunteers</button>
        <button class="btn btn-outline-warning" onclick="toggleSection('donatorsTable')">Show/Hide Donators</button>
        <button class="btn btn-outline-dark" onclick="toggleSection('incidentsTable')">Show/Hide Incidents</button>
    </div>

    <!-- Admins Table -->
    <div id="adminsTable" class="mb-5">
        <h4>Admins</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr><th>Name</th><th>Email</th><th>Role</th></tr>
            </thead>
            <tbody>
                @foreach (var admin in Model.Admins)
                {
                    <tr>
                        <td>@admin.UserName</td>
                        <td>@admin.UserEmail</td>
                        <td>@admin.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Staff Table -->
    <div id="staffTable" class="mb-5">
        <h4>Staff</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr><th>Name</th><th>Email</th><th>Current Role</th><th>Assign New Role</th></tr>
            </thead>
            <tbody>
                @foreach (var staff in Model.Staff)
                {
                    <tr>
                        <td>@staff.UserName</td>
                        <td>@staff.UserEmail</td>
                        <td>@staff.Role</td>
                        <td>
                            <form asp-action="AssignRole" method="post" class="d-flex gap-2">
                                <input type="hidden" name="userId" value="@staff.UserId" />
                                <select name="newRole" class="form-select form-select-sm w-auto">
                                    <option value="Coordinator">Coordinator</option>
                                    <option value="Volunteer Manager">Volunteer Manager</option>
                                    <option value="Volunteer">Volunteer</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Volunteers Table -->
    <div id="volunteersTable" class="mb-5">
        <h4>Volunteers</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr><th>Name</th><th>Email</th><th>Role</th></tr>
            </thead>
            <tbody>
                @foreach (var volunteer in Model.Volunteers)
                {
                    <tr>
                        <td>@volunteer.UserName</td>
                        <td>@volunteer.UserEmail</td>
                        <td>@volunteer.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Donators Table -->
    <div id="donatorsTable" class="mb-5">
        <h4>Donators</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr><th>Name</th><th>Email</th><th>Donation Type</th><th>Notes</th></tr>
            </thead>
            <tbody>
                @foreach (var donator in Model.Donators)
                {
                    <tr>
                        <td>@donator.DonatorName</td>
                        <td>@donator.DonatorEmail</td>
                        <td>@donator.DonationType</td>
                        <td>@donator.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Incidents Table -->
    <div id="incidentsTable" class="mb-5">
        <h4>Incidents</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Reporter</th>
                    <th>Type</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Urgency</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Assigned Volunteer</th>
                    <th>Assign Volunteer</th>
                    <th>Assigned Donator</th>
                    <th>Assign Donator</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model.Incidents)
                {
                    <tr>
                        <td>@incident.ReporterName</td>
                        <td>@incident.IncidentType</td>
                        <td>@incident.Location</td>
                        <td>@incident.Description</td>
                        <td>@incident.UrgencyLevel</td>
                        <td>@incident.DateReported.ToShortDateString()</td>
                        <td>@incident.Status</td>
                        <td>@incident.AssignedVolunteerEmail ?? "Unassigned"</td>
                        <td>
                            <form asp-action="AssignVolunteer" method="post" class="d-flex gap-2">
                                <input type="hidden" name="incidentId" value="@incident.IncidentId" />
                                <select name="volunteerEmail" class="form-select form-select-sm w-auto">
                                    @foreach (var volunteer in Model.Volunteers)
                                    {
                                        <option value="@volunteer.UserEmail">@volunteer.UserName</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-success">Assign</button>
                            </form>
                        </td>
                        <td>@incident.AssignedDonatorEmail ?? "Unassigned"</td>
                        <td>
                            <form asp-action="AssignDonator" method="post" class="d-flex gap-2">
                                <input type="hidden" name="incidentId" value="@incident.IncidentId" />
                                <select name="donatorEmail" class="form-select form-select-sm w-auto">
                                    @foreach (var donator in Model.Donators)
                                    {
                                        <option value="@donator.DonatorEmail">@donator.DonatorName</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-warning">Assign</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Toggle Script -->
<script>
    function toggleSection(sectionId) {
        const section = document.getElementById(sectionId);
        section.style.display = section.style.display === "none" ? "block" : "none";
    }
</script>

<!-- Optional: Hide all sections by default -->
<style>
    #adminsTable, #staffTable, #volunteersTable, #donatorsTable, #incidentsTable {
        display: none;
    }
</style>
